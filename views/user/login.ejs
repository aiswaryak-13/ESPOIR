<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>ESPOIR | Login</title>
  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Google Fonts: Aboreto -->
  <link href="https://fonts.googleapis.com/css2?family=Aboreto&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Aclonica&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="css/user/userLogin.css">
</head>
<body>
  <div class="container d-flex justify-content-center align-items-center vh-100">
    
    <div class="row login-container w-100">
      
      <!-- Left Side -->
      <div class="col-md-6 p-5">
        <div class="text-center">
          <div class="brand-title">ESPOIR</div>
        </div>

        <% if (typeof message !== 'undefined') { %>
          <div class="alert alert-danger alert-dismissible fade show text-center mt-3" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <form action="/login" method="POST">
          <div class="mb-3">
            <button type="button" class="google-btn w-100" onclick="location.href='/auth/google/login'">
              <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg" alt="Google logo">
              Login with Google
            </button>
          </div>

          <div class="divider">or</div>

          <div class="mb-3">
            <input type="email" name="email" class="form-control" placeholder="Email" required />
          </div>

          <div class="mb-1">
            <input type="password" name="password" class="form-control" placeholder="Password" required />
          </div>

          <div class="forgot-password mb-3">
            <a href="/forgotPassword" class="text-decoration-none">Forgot password?</a>
          </div>

          <div class="d-grid">
            <button type="submit" class="login-btn">Login</button>
          </div>
        </form>

        <div class="signup-text">
          New user? <a href="/signup">Signup now...</a>
        </div>
      </div>

      <!-- Right Side -->
      <div class="col-md-6 image-side d-none d-md-block p-0">
        <img src="/img/login-product.jpg" alt="Product" class="img-fluid h-100 w-100" style="object-fit: cover;" />
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
