<header class="px-4 py-3 shadow-sm bg-white d-flex align-items-center justify-content-between position-relative">

  <button id="toggleSidebar" class="btn btn-outline-dark d-md-none">
    <i class="bi bi-list fs-4"></i>
  </button>

  <!-- Centered Title -->
  <h3 class="position-absolute start-50 translate-middle-x m-0" style="font-family: 'Aboreto', cursive;">ESPOIR</h3>

  <!-- Profile Icon (aligned right) -->
  <div class="ms-auto">
    <i class="bi bi-person-circle fs-3 text-dark"></i>
  </div>
</header>

<!-- Horizontal Line -->
<hr class="m-0">

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const toggleBtn = document.getElementById('toggleSidebar');
    const sidebar = document.querySelector('.admin-sidebar'); // Ensure sidebar has this class

    if (toggleBtn && sidebar) {
      toggleBtn.addEventListener('click', () => {
        sidebar.classList.toggle('d-none');
      });
    }
  });
</script>

