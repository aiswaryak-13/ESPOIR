<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Edit Category | Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Outfit&family=Inter&display=swap" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

  <!-- Custom CSS -->
  <link href="/css/admin/dashboard.css" rel="stylesheet" />
</head>
<body style="font-family: 'Outfit', sans-serif;">

  <!-- Header -->
  <%- include('../../views/partials/admin/header') %>

  <div class="d-flex">
    <!-- Sidebar -->
    <%- include('../../views/partials/admin/sidebar') %>

    <!-- Main Content -->
    <main class="flex-fill p-4" style="margin-left: 250px;">
      <div class="container">
        <h2 class="mb-4">Edit Category</h2>

        <form action="/admin/editCategory/<%= category._id %>" method="POST" class="border p-4 rounded bg-light">
          <div class="mb-3">
            <label for="name" class="form-label">Category name</label>
            <input
              type="text"
              name="name"
              id="name"
              class="form-control"
              value="<%= category.name %>"
              required
            />
          </div>

          <div class="mb-3">
            <label for="stocks" class="form-label">Stock</label>
            <input
              type="number"
              name="stocks"
              id="stocks"
              class="form-control"
              value="<%= category.stocks %>"
              min="0"
              required
            />
          </div>

          <button type="submit" class="btn btn-success me-2">Update</button>
          <a href="/admin/category" class="btn btn-secondary">Cancel</a>
        </form>
      </div>
    </main>
  </div>

  <%- include('../../views/partials/admin/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
