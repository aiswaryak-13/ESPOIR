<!DOCTYPE html>
<html lang="en">
<head>
  <title>Espoir | Admin Dashboard</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Outfit&family=Inter&display=swap" rel="stylesheet">
  
  <link href="https://fonts.googleapis.com/css2?family=Aboreto&family=Outfit&family=Inter&display=swap" rel="stylesheet">

  <!-- Custom CSS -->
  <link href="/css/admin/dashboard.css" rel="stylesheet">
  
</head>
<body>

 <!-- Top Header -->
 <%- include ('../../views/partials/admin/header') %>



  <div class="d-flex">
    <!-- Sidebar -->
    
    <%- include('../partials/admin/sidebar') %>

    <!-- Main Content -->
    <main class="flex-grow-1 p-4">
      <div class="d-flex justify-content-center align-items-center mb-4">
        <h2>Dashboard</h2>
      </div>

      <!-- Cards -->
      <div class="row g-3 mb-4">
        <div class="col-md-3">
          <div class="card p-3 shadow-sm">
            <h6>Today's Sales</h6>
            <h4>$30,000</h4>
            <p class="text-danger small">-8% than yesterday</p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card p-3 shadow-sm">
            <h6>Total Orders</h6>
            <h4>300</h4>
            <p class="text-danger small">-5% than yesterday</p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card p-3 shadow-sm">
            <h6>Products Sold</h6>
            <h4>50</h4>
            <p class="text-danger small">-8% than yesterday</p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card p-3 shadow-sm">
            <h6>New Customers</h6>
            <h4>15</h4>
            <p class="text-danger small">-8% than yesterday</p>
          </div>
        </div>
      </div>

      <!-- Chart Section -->
      <div class="card p-4 mb-4 shadow-sm">
        <h5>Total Revenue (2025)</h5>
        <canvas id="revenueChart" height="100"></canvas>
      </div>

      

      <!-- Footer -->
      
    </main>
  </div>
  
  <%- include ('../../views/partials/admin/footer') %>

  <!-- Chart.js CDN -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  
  <script>
    const toggleBtn = document.getElementById('toggleSidebar');
    const sidebar = document.getElementById('adminSidebar');
  
    function showSidebar() {
      sidebar.style.display = 'block';
    }
  
    function hideSidebar() {
      if (window.innerWidth < 768) {
        sidebar.style.display = 'none';
      }
    }
  
    toggleBtn.addEventListener('click', () => {
      const isVisible = getComputedStyle(sidebar).display === 'block';
      sidebar.style.display = isVisible ? 'none' : 'block';
    });
  
    // Hide sidebar when clicking outside (mobile only)
    document.addEventListener('click', (e) => {
      if (window.innerWidth < 768 && !sidebar.contains(e.target) && !toggleBtn.contains(e.target)) {
        hideSidebar();
      }
    });
  
    // Restore sidebar on resize
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 768) {
        showSidebar();
      } else {
        hideSidebar();
      }
    });
  
    // Initialize correctly
    window.addEventListener('DOMContentLoaded', () => {
      if (window.innerWidth < 768) {
        hideSidebar();
      } else {
        showSidebar();
      }
    });
    
  </script>
  

</body>
</html>
